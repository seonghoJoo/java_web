<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- 클린턴 비긴이 만듦  -->
<configuration>
<!-- alias -->
<typeAliases>
<typeAlias type="org.bmj.ims.vo.Idol" alias="Idol" />
<typeAlias type="org.bmj.ims.vo.Group" alias="Group"/>
<typeAlias type="org.bmj.ims.vo.PageVO" alias="PageVO"/>
</typeAliases>

<!--  데이터 베이스와 연결 환경 설정 -->
<environments default="development">
	<environment id="development">
		<transactionManager type="JDBC"/>
		<!--  mybatis dataSource 클래스가 -->
		<dataSource type="JNDI">
			<!-- corba -->
			<property name="data_source" value="java:comp/env/oraclexe"/>
			<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
			<property name="driver" value ="oracle.jdbc.OracleDriver" />
			<property name="username" value="test" />
			<property name="password" value="1111" />
		</dataSource>
	</environment>
</environments>

<!--  mapper 경로 설정 '/' -->
<mappers>
	<mapper resource="org/bmj/ims/mapper/groups.xml"></mapper>
	<mapper resource="org/bmj/ims/mapper/idols.xml"></mapper>
</mappers>

</configuration>